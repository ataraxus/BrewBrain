<div id="<%= dom_id formula_ingredient %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Ingredient:</strong>
    <%= formula_ingredient.ingredient_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Percentage:</strong>
    <%= formula_ingredient.percentage %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Decimal:</strong>
    <%= formula_ingredient.decimal %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Formula:</strong>
    <%= formula_ingredient.formula_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this formula ingredient", formula_ingredient, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this formula ingredient', edit_formula_ingredient_path(formula_ingredient), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
