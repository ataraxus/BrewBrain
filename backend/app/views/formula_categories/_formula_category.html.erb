<div id="<%= dom_id formula_category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= formula_category.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= formula_category.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this formula category", formula_category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this formula category', edit_formula_category_path(formula_category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
