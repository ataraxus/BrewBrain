<div id="<%= dom_id comment %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= comment.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Text:</strong>
    <%= comment.text %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Reference:</strong>
    <%= comment.reference_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Attachments:</strong>
    <% comment.attachments.each do |attachment| %>
      <div><%= link_to attachment.filename, attachment %></div>
    <% end %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this comment", comment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this comment', edit_comment_path(comment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
